{
  "manifest_version": 3,
  "name": "Reserve Sniper",
  "version": "1.0.0",
  "description": "Encuentra productos reservados y disponibles en Wallapop como un francotirador",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "webRequest"
  ],
  "host_permissions": [
    "*://api.wallapop.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://es.wallapop.com/*", "*://www.wallapop.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Reserve Sniper",
    "default_icon": {
      "16": "icons/logo.png",
      "32": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "icons": {
    "16": "icons/logo.png",
    "32": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*", "inject.js"],
      "matches": ["*://es.wallapop.com/*", "*://www.wallapop.com/*"]
    }
  ]
}
